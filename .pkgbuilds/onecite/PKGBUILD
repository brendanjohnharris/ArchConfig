)
# Note: PyPI only provides a wheel for this package, not a source tarball
source=("https://files.pythonhosted.org/packages/py3/o/onecite/onecite-${pkgver}-py3-none-any.whl")
sha256sums=('fa1ecd605676903ededa11b0d0dac8528c24c7d55e746ff77c8774b5c070d1f9')

package() {
    python -m installer --destdir="$pkgdir" "${srcdir}/onecite-${pkgver}-py3-none-any.whl"
}